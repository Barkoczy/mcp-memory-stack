{
  "name": "mcp-memory-server",
  "version": "2.0.0",
  "type": "module",
  "description": "High-performance MCP Memory Server with semantic search capabilities",
  "main": "dist/index.mjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "start": "node dist/index.mjs",
    "start:dev": "tsx src/index.ts",
    "start:fastify": "node --import tsx src/fastify/index.ts",
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "dev:fastify": "NODE_ENV=development nodemon --exec 'node --import tsx' src/fastify/index.ts",
    "prod": "NODE_ENV=production npm run build && npm run start",
    "prod:fastify": "NODE_ENV=production node --import tsx src/fastify/index.ts",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --experimental-specifier-resolution=node\" jest --config=config/jest.config.js",
    "test:unit": "NODE_OPTIONS=\"--experimental-vm-modules --experimental-specifier-resolution=node\" jest --config=config/jest.config.js tests/unit",
    "test:integration": "NODE_OPTIONS=\"--experimental-vm-modules --experimental-specifier-resolution=node\" jest --config=config/jest.config.js tests/integration",
    "test:e2e": "NODE_OPTIONS=\"--experimental-vm-modules --experimental-specifier-resolution=node\" jest --config=config/jest.config.js tests/e2e",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules --experimental-specifier-resolution=node\" jest --config=config/jest.config.js --watch",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules --experimental-specifier-resolution=node\" jest --config=config/jest.config.js --coverage",
    "test:mcp": "node scripts/test-mcp.js",
    "lint": "eslint src/ tests/ scripts/ --fix",
    "lint:fix": "eslint src/ --fix",
    "docker:build": "docker build -t mcp-memory-server .",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up",
    "setup": "./scripts/setup.sh",
    "deploy": "./scripts/deploy.sh",
    "release:prepare": "./scripts/prepare-release.sh",
    "health:check": "./scripts/health-check.sh",
    "rollback": "./scripts/rollback.sh",
    "test:setup": "./scripts/test-setup.sh",
    "test:protocol": "./scripts/test-mcp-protocol.sh",
    "docker:publish": "./scripts/docker-publish.sh",
    "docker:publish:dry-run": "./scripts/docker-publish.sh --dry-run",
    "prepare": "husky",
    "lint:check": "eslint src/ tests/ scripts/",
    "format": "prettier --write \"src/**/*.{js,ts}\" \"tests/**/*.js\" \"scripts/**/*.js\" \"*.{json,md,yml}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts}\" \"tests/**/*.js\" \"scripts/**/*.js\" \"*.{json,md,yml}\"",
    "code:check": "npm run lint:check && npm run format:check && npm run type:check",
    "code:fix": "npm run lint && npm run format",
    "type:check": "npx tsc --noEmit --allowJs --checkJs --declaration false",
    "test:full": "./scripts/run-full-test.sh",
    "test:orchestrator": "node scripts/test-orchestrator.js",
    "test:quick": "node scripts/quick-test.js"
  },
  "dependencies": {
    "@fastify/compress": "^8.1.0",
    "@fastify/cors": "^11.0.1",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/multipart": "^9.0.3",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/type-provider-typebox": "^5.2.0",
    "@types/pg": "^8.15.4",
    "@xenova/transformers": "^2.15.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.18.1",
    "drizzle-orm": "^0.44.3",
    "drizzle-zod": "^0.8.2",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fastify": "^5.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "prom-client": "^15.1.0",
    "redis": "^4.6.12",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.25.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.31.0",
    "@jest/globals": "^29.7.0",
    "@sinclair/typebox": "^0.34.38",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.9",
    "@types/redis": "^4.0.10",
    "babel-jest": "^30.0.4",
    "detect-secrets": "^1.0.6",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.21.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.6.2",
    "supertest": "^6.3.4",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier --write"
    ]
  },
  "keywords": [
    "mcp",
    "memory",
    "semantic-search",
    "pgvector",
    "embeddings",
    "ai",
    "model-context-protocol"
  ],
  "author": "MCP Memory Team",
  "license": "MIT"
}
