# Environment Configuration for MCP Memory Server

# Mode Configuration
NODE_ENV=development
MCP_MODE=false
REST_API_ENABLED=true
REST_API_ONLY=false

# Server Configuration
PORT=3333
HEALTH_PORT=3334

# PostgreSQL Configuration
POSTGRES_PASSWORD=mcp_secure_password_2024
DATABASE_URL=postgresql://mcp_user:mcp_secure_password_2024@localhost:5432/mcp_memory
DB_MAX_POOL_SIZE=20
DB_IDLE_TIMEOUT=30000

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Embedding Configuration
EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2
# For production, use a more powerful model:
# EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
EMBEDDING_DIMENSIONS=384
EMBEDDING_BATCH_SIZE=32

# Security Configuration
API_KEY_REQUIRED=false
API_KEYS=mcp_dev_key1,mcp_dev_key2
JWT_ENABLED=false
JWT_SECRET=change-me-in-production

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=mcp-memory.log

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=10000

# Performance Settings
SEARCH_DEFAULT_LIMIT=10
MAX_REQUEST_SIZE=10mb

# Monitoring
PROMETHEUS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# pgAdmin Configuration (optional)
PGADMIN_DEFAULT_EMAIL=admin@mcp-memory.local
PGADMIN_DEFAULT_PASSWORD=admin_password_2024
