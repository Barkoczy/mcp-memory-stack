# MCP Memory Stack Environment Configuration
# Enterprise 2025 - Environment Variables Template
# Copy this file to .env and update with your values

# ===============================================
# DATABASE CONFIGURATION
# ===============================================
# PostgreSQL Database
POSTGRES_PASSWORD=secure_password_2025_change_me
POSTGRES_PORT=5432
DATABASE_URL=postgresql://mcp_user:secure_password_2025_change_me@postgresql:5432/mcp_memory_stack

# ===============================================
# VECTOR DATABASE CONFIGURATION
# ===============================================
# Qdrant Vector Database
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334

# ===============================================
# SERVICE CONFIGURATION
# ===============================================
# Fastify API Gateway
NODE_ENV=development
FASTIFY_PORT=3333
FASTIFY_METRICS_PORT=9090
JWT_SECRET=jwt_secret_key_2025_enterprise_change_me
MCP_API_KEY=mcp_api_key_2025_change_me
LOG_LEVEL=info
CACHE_TTL=3600
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=60000

# Rust Embedding Service
RUST_SERVICE_PORT=8080
RUST_METRICS_PORT=9091
RUST_LOG=info
RUST_BACKTRACE=1
RUST_API_KEYS=rust_api_key_2025_change_me
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_CACHE_SIZE=1000
EMBEDDING_BATCH_SIZE=32

# ===============================================
# MONITORING & OBSERVABILITY
# ===============================================
# Prometheus
PROMETHEUS_PORT=9092

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin_password_2025_change_me

# Jaeger Tracing
JAEGER_UI_PORT=16686
JAEGER_GRPC_PORT=14250
JAEGER_HTTP_PORT=14268
JAEGER_OTLP_GRPC_PORT=4317
JAEGER_OTLP_HTTP_PORT=4318

# ===============================================
# OPTIONAL SERVICES (PROFILES)
# ===============================================
# Redis Cache (--profile cache)
REDIS_PORT=6379

# PgAdmin (--profile admin)
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@company.com
PGADMIN_PASSWORD=admin_password_2025_change_me

# Node Exporter (--profile monitoring)
NODE_EXPORTER_PORT=9100

# cAdvisor (--profile monitoring)
CADVISOR_PORT=8081

# ===============================================
# SECURITY NOTES
# ===============================================
# 1. Change all default passwords before production deployment
# 2. Use strong, unique passwords for each service
# 3. Store sensitive values in a secure secret management system
# 4. Never commit actual secrets to version control
# 5. Use different credentials for development, staging, and production
# 6. Rotate credentials regularly (recommended: every 90 days)
# 7. Enable TLS/SSL for all external communications in production

# ===============================================
# DOCKER COMPOSE PROFILES
# ===============================================
# Available profiles:
# - default: Core services (postgresql, qdrant, fastify, rust, prometheus, grafana, jaeger)
# - cache: Adds Redis for caching
# - admin: Adds pgAdmin for database management
# - monitoring: Adds Node Exporter and cAdvisor for system monitoring
#
# Usage examples:
# docker-compose up -d                           # Core services only
# docker-compose --profile cache up -d          # Core + Redis
# docker-compose --profile admin up -d          # Core + pgAdmin
# docker-compose --profile monitoring up -d     # Core + System monitoring
# docker-compose --profile cache --profile admin --profile monitoring up -d  # All services
