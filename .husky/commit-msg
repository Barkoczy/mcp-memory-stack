#!/usr/bin/env sh

echo "🔍 Validating commit message with commitlint..."

# Use commitlint for proper conventional commit validation
npx --no -- commitlint --edit "$1"

if [ $? -eq 0 ]; then
    echo "✅ Commit message format is valid"
else
    echo ""
    echo "💡 See commitlint.config.js for allowed types and scopes"
    echo "📖 Learn more: https://conventionalcommits.org/"
    exit 1
fi